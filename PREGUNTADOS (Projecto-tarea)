print("¿En que año se declara la independencia de Argentina?");

print("Opcion 1=1810")

print("Opcion 2=1816")

print("Opcion 3=1852")

# Inicializar los puntos de los jugadores
pts_j1 = 0
pts_j2 = 0

# Solicitar respuestas de los jugadores
game1j1 = input("Jugador 1, ingrese el número de su respuesta (1 al 3): ")
game1j2 = input("Jugador 2, ingrese el número de su respuesta (1 al 3): ")

# Verificar si las respuestas de los jugadores son correctas
if game1j1 == '2':
    print("Jugador 1, ¡respuesta correcta!")
    pts_j1 += 1
else:
    print("Jugador 1, respuesta incorrecta")

if game1j2 == '2':
    print("Jugador 2, ¡respuesta correcta!")
    pts_j2 += 1
else:
    print("Jugador 2, respuesta incorrecta")

# Resultado de los puntajes

time.sleep (2)

print("-----------------PUNTAJES-----------------")

print("Los puntos del jugador 1 son=",pts_j1)
print("Los puntos del jugador 1 son=",pts_j2)

print("-----------------PUNTAJES-----------------")

time.sleep (2)

